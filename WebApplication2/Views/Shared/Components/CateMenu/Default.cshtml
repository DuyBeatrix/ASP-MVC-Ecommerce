@model IEnumerable<Category>
<div class="col-lg-3">
    <div class="hero__categories">
        <div class="hero__categories__all">
            <i class="fa fa-bars"></i>
            <span>All departments</span>
        </div>
        <ul>
            <li>
                <a asp-controller="shop" asp-action="productsellquantityshop">
                    Hot Selling
                </a>
            </li>
            <li>
                <a asp-controller="shop" asp-action="newproductsshop">
                    New Products
                </a>
            </li>
            @foreach(var item in Model)
            {
                <li>
                    <a asp-controller="shop" asp-action="ProductByCateShop" asp-route-cateid="@item.CateId">
                    @item.CateName
                </a></li>
            }
        </ul>
    </div>
</div>