@model IEnumerable<Category>
<div class="col-lg-3">
    <div class="hero__categories">
        <div class="hero__categories__all">
            <i class="fa fa-bars"></i>
            <span>All departments</span>
        </div>
        <ul>
            <li>
                <a asp-controller="home" asp-action="productsellquantity">
                    Hot Selling
                </a>
                <a asp-controller="home" asp-action="newproducts">
                    New Products
                </a>
            </li>
            @foreach(var item in Model)
            {
                <li><a asp-controller="home" asp-action="productbycate" asp-route-cateid="@item.CateId">
                    @item.CateName
                </a></li>
            }
        </ul>
    </div>
</div>